<%- include("header") -%> 
    <div class="box" id="heading">
      <h1><%=listTitle%></h1>
    </div>
    <div class="box">
        <div class="scroll">
            <% newItems.forEach(item=> {%>
                <form class="border"  action="/delete" method="post">
                    <div class="item">                     
                            <input name="checkbox" type="checkbox" value="<%=item.name%>">  
                            <p id="para"><%=item.name%><div class="away"><button value="<%=item._id%>" name="submit" type="submit" class="icon" > <i class="fa-solid fa-trash-can"></i></button ></div></p>
                                <input type="hidden" name="listName" value="<%=listTitle%>">        
                        <!-- while using font awesome icons make sure internet is connected -->
                    </div>
                </form>    
            <% }) %>
        </div>
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" id="" placeholder="New Item" autocomplete="off" required autofocus/>
            <button class="submit" type="submit" name="list" value=<%=listTitle%> >+</button>
        </form>  
    </div>
<%- include("footer") -%> 

